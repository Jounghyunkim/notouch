<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_screen"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >
  
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:textColor="#FFFFFF" >

        <ImageView
            android:id="@+id/main_screen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/main_screen" />

        <LinearLayout
            android:id="@+id/drag_guide_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/drag_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="20dp"
                android:text="@string/drag_guide"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#888888" />

            <ImageView
                android:id="@+id/drag_imageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/right_drag" />
        </LinearLayout>

        <ImageView
            android:id="@+id/lock_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:onClick="onClickLockButton"
            android:src="@drawable/locked" />
    </FrameLayout>

</LinearLayout>