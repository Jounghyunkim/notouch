<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <!--
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#444444"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/hello"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Service ON/OFF"
            android:textOff="Off"
            android:textOn="On" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="3px"
            android:layout_marginTop="10dp"
            android:background="#FF696969" />
    </LinearLayout>
    <!--
        <TextView
            android:id="@+id/subtextView_ServiceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="노터치 서비스를  시작합니다."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#888888" />
    -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="#444444"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="화면 잠금 모드"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="132dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical" >

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <RadioButton
                            android:id="@+id/rb1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="터치 잠금 모드" >
                        </RadioButton>

                        <TextView
                            android:id="@+id/subtextView_ServiceMode1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Touch만 막습니다."
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#888888" />

                        <RadioButton
                            android:id="@+id/rb2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="음악 모드" >
                        </RadioButton>

                        <TextView
                            android:id="@+id/subtextView_ServiceMode2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="LCD도 OFF합니다."
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#888888" />

                        <RadioButton
                            android:id="@+id/rb3"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="복합 모드" >
                        </RadioButton>

                        <TextView
                            android:id="@+id/subtextView_ServiceMode3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="복합 모드 입니다."
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#888888" />
                    </RadioGroup>
                </LinearLayout>

                <ImageView
                    android:id="@+id/guideimg1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/black_img" />
            </LinearLayout>

            <!--
                 <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="미정" >
            </RadioButton>
            -->

            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#444444"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="동작 모드"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/mySwitch2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="부팅 후 자동 시작"
                android:textOff="Off"
                android:textOn="On" />

            <TextView
                android:id="@+id/subtextView_bootingstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:text="부팅 후 자동으로 노터치 서비스를 시작"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#888888" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#FFFFFF" />

            <Switch
                android:id="@+id/mySwitch3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="근접센서"
                android:textOff="Off"
                android:textOn="On" />

            <TextView
                android:id="@+id/subtextView_proximityOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:text="화면 근접시 자동으로 터치잠금 실행"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#888888" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#FFFFFF" />

            <Switch
                android:id="@+id/mySwitch4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="잠금 버튼 숨기기"
                android:textOff="Off"
                android:textOn="On" />

            <TextView
                android:id="@+id/subtextView_Button_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:text="터치잠금 버튼을 숨기고 노티메뉴를 이용."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#888888" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#FFFFFF" />

            <Switch
                android:id="@+id/mySwitch5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="잠금 해제 설명"
                android:textOff="Off"
                android:textOn="On" />

            <TextView
                android:id="@+id/subtextView_lockcomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:text="잠금 상태 안내 문구를 화면에 표시"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#888888" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#FFFFFF" />

            <Switch
                android:id="@+id/mySwitch6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="5연속 터치로 잠금해제"
                android:textOff="Off"
                android:textOn="On" />

            <TextView
                android:id="@+id/subtextView_continue_touch_unlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:text="잠금화면 상태에서 화면 5연속터치로 해제."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#888888" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/text_lock_size_change"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="잠금버튼 크기 설정"/>
            
            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingLeft="30dp"
                android:paddingRight="50dp"
                android:max="100"
                android:thumb="@drawable/locked" />

            <TextView
                android:id="@+id/subtext_size_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:text="잠금버튼 크기를 변경합니다"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#888888" />
        </LinearLayout>
        
        

            
        
        
    </ScrollView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="3px"
        android:layout_marginTop="10dp"
        android:background="#FF696969" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-4996697168278131/9568703002" >
        </com.google.android.gms.ads.AdView>

        <!-- "ca-app-pub-4996697168278131/9568703002"         :       MMP -->
        <!-- "ca-app-pub-4996697168278131/7700759009"         :       JohnnyBot -->
    </LinearLayout>

</LinearLayout>